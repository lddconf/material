<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pod_fragment">

    <fragment
        android:id="@+id/pod_fragment"
        android:name="com.example.nasaapp.ui.fragments.PictureOfTheDayFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/picture_of_the_day_fragment">

        <action
            android:id="@+id/action_pod_settings"
            app:destination="@id/settings_fragment" />
    </fragment>
    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.example.nasaapp.ui.fragments.SettingsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_settings_to_pod_fragment"
            app:destination="@id/pod_fragment" />
    </fragment>
</navigation>