<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.nasaapp.ui.PictureOfTheDayFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/picture_of_the_day_fragment">

        <action
            android:id="@+id/action_pod_settings"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.nasaapp.ui.SettingsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_settings_to_pod_fragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>