<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray14</item>
        <item name="colorPrimaryVariant">@color/gray_800</item>

        <item name="colorOnSurface">@color/gray_400</item>

        <item name="colorOnPrimary">@color/gray_400</item>
        <item name="android:colorPrimaryDark">?attr/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_A100</item>
        <item name="colorSecondaryVariant">@color/purple_A400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorPrimaryVariant</item>
        <item name="android:colorControlNormal">?attr/colorOnSurface</item>
        <item name="android:colorControlActivated">?attr/colorOnSurface</item>

        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="toolbarStyle">@style/Theme.NasaApp.PODAppBarStyle</item>
        <item name="bottomSheetStyle">@style/Theme.NasaApp.PODBottomSheetDialog</item>
        <item name="textInputStyle">@style/TextInputLayout</item>
    </style>

    <style name="Theme.NasaApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NasaApp.PODAppBarStyle">
        <item name="popupMenuBackground">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="counterTextColor">@color/text_input_layout_helper_color</item>
        <item name="helperTextTextColor">@color/text_input_layout_helper_color</item>
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
        <item name="hintTextColor">@color/text_input_layout_indicator_text_color</item>
    </style>

    <style name="Theme.NasaApp.PODBottomSheetDialog">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.NasaApp.PODBottomSheetDialog.Space">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


    <style name="Theme.NasaApp.Space">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>